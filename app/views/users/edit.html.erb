<div class="container">
 <div class="row">

      <% if @user.errors.any? %>
       <%= @user.errors.count %>error prohibited this obj from being saved:
       <% @user.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
      <% end %>

  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>User info</h1>

    <%= form_with model: @user, url: user_path(current_user), method: :patch, local:true do |f| %>

      <h3>Name</h3>
      <%= f.text_field :name %>

      <h3>Introduction</h3>
      <%= f.text_area :body %>

      <h3>Image</h3>
      <%= f.attachment_field :profile_image %>
      <h3><%= f.submit 'Update User' %></h3>
    <% end %>
  </div>

 </div>
</div>

