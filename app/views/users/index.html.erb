<div class="container px-5 px-sm-0">
 <div class="row">

     <div class="col-md-3">
        <%= render 'users/list', user: @user, book: @book %>
     </div>

     <div class="col-md-8">
         <h2>Users</h2>
            <table>
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                </tr>
              </thead>
              <tbody>

                  <% @users.each do |user| %>
                  <tr>
                   <td>
                    <%= attachment_image_tag user, :profile_image,  :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                   </td>
                   <td>
                    <%= user.name %>
                   </td>
                   <td>
                    <%=link_to "show", user_path(user) %>
                   </td>
                  <% end %>
                  </tr>

              </tbody>

            </table>
     </div>

 </div>
</div>



