<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
        <table>
          <thead>
             <tr>
                <th>title</th>

                <th>opinion</th>
             </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag book.user, :profile_image,  :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                </td>
                <td>
                 <%= link_to book.title, book_path(book.id) %>
                </td>

                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>

</div>

