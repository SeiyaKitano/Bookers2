<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8">
      <h1>Book detail</h1>

        <p><%= attachment_image_tag @book.user, :profile_image,  :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></p>

        <p><%= link_to @book.title, book_path(@book) %></p>

        <p><%=@book.body %></p>

        <% if @book.id == current_user.id %>
         <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
         <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-success" %>
        <% end %>
    </div>

 </div>
</div>

